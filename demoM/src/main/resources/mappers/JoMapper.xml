<!-- insert -->
	<insert id="insert">
		insert into jo values(#{jno},#{jname},#{captain},#{project},#{slogan})
	</insert>

<!-- update -->
	<update id="update">
		update jo set jno=#{jno}, jname=#{jname}, captain=#{captain}, project=#{project}\
						,slogan = #{slogan} where jno = #{jno}
	</update>

<!-- delete -->
	<delete id="delete">
		delete from jo where jno=#{jno}
	</delete>

</mapper>


